{
  "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "declaration": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "sourceMap": false,
      "baseUrl": "./src"
  },
  "lib": [
      "node",
      "es2015"
  ],
  "include": [
      "src"
  ],
  "exclude": [
      "./node_modules",
      "./dist"
  ]        
}
